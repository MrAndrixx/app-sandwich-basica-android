<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".sobre_nosotros">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="354dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/logopng" />

    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-103dp"
        android:padding="10dp"
        android:text="@string/texto_1_sobre_nosotros"
        android:textSize="21sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_descripcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txt_descripcion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:text="@string/texto_2_sobre_nosotros"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_descripcion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txt_descripcion2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:text="@string/texto_3_sobre_nosotros"
        android:textSize="18sp"
        android:textStyle="italic" />

</RelativeLayout>